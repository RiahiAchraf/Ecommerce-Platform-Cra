{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["react-app", "airbnb", "prettier", "prettier/react"],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": ["react", "prettier"],
    "rules": {
        "prettier/prettier": [
          "error",
          {
            "singleQuote": true
          }
        ],
        "react/jsx-filename-extension": [
          "warn",
          {
            "extensions": [".js", ".jsx"]
          }
        ]
      }
}
